@model IEnumerable<Product>

<div class="container-fluid p-4 my-2 d-flex align-items-center justify-content-center">
    <div class="col-xxl-5 text-black border bg-light p-5">
        <h1>Product List</h1>

        <table class="table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.ProductId)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Price)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.MaxBudget)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.StudioName)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.ProductId)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Price)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.MaxBudget)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.StudioName)
                        </td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.ProductId">Edit</a> |
                            <a asp-action="Details" asp-route-id="@item.ProductId">Details</a> |
                            <a asp-action="Delete" asp-route-id="@item.ProductId">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        @if (Session.GroupId == UserGroup.Admin)
        {
        <a asp-action="Create">Create</a>        
        }
    </div>
</div>
